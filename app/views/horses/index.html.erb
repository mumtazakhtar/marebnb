<div class="cards-container">
  <div class="cards-ind">
  <% @horses[0...9].each do |horse|%>
    <div class="card-horse">
      <% if horse.photo.key %>
      <%= cl_image_tag horse.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    <div class="card-horse-infos">
      <h2><%=link_to horse.name, horse_path(horse) %></h2>
      <div class="info">
        <p><i class="fa-solid fa-cake-candles"></i> <%= horse.age %></p>
        <p><i class="fa-solid fa-location-dot"></i> <%= horse.age %></p>
        <p><i class="fa-solid fa-horse"></i> <%= horse.breed %></p>
        <p><i class="fa-solid fa-euro-sign"></i> <%= horse.price %></p>
      </div>
    </div>
  </div>
  <% end %>
  </div>
  </div>
</div>


