<div class="cards-container">
  <div class="cards">
  <% @horses.each do |horse|%>
    <div class="card-horse">
      <% if horse.photo.key %>
      <%= cl_image_tag horse.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    <div class="card-horse-infos">
      <h2><%=link_to horse.name, horse_path(horse) %></h2>
      <div class="info">
        <p>Age: <%= horse.age %></p>
        <p>Breed: <%= horse.breed %></p>
        <p>Price: <%= horse.price %></p>
      </div>
        <%# <p>For a full description, click in the link!</p> %>
        <%# <%= horse.description %>
    </div>
  </div>
  <% end %>
  </div>
</div>


