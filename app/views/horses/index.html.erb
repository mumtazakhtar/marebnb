<div class="cards-container">
<div class="cards">
<ul>
  <% @horses.each do |horse|%>
    <div class="card-horse">
    <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 200, height: 150, crop: :fill) %>
    <div class="card-horse-infos">
        <h2><%=link_to horse.name, horse_path(horse) %></h2>
      <div>
        <li><%= horse.age %></li>
        <li><%= horse.breed %></li>
        <li><%= horse.price %></li>
      </div>
        <p><%= horse.description %></p>
    </div>
  </div>
  <% end %>
</ul>
</div>
</div>

